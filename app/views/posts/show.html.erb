<h1><%= @post.title %></h1>

<div class="row">
  <div class="col-md-8">
    <% if @post.summary.present? %>
    <b> Post Summary: </b> 
    <% Summary.find_by_post_id(@post.id).body %>
    <%= link_to "Edit Summary", edit_summary_path(@post.summary), class: 'btn btn-success' %>
     <% else %>
    <%= link_to "Add Summary", new_summary_path(@post), class: 'btn btn-success' %>
    <% end %>

    <p><%= @post.body %></p>
  </div>
  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>


