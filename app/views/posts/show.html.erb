<h1><%= @post.title %></h1>

<div class="row">
  <div class="col-md-8">

    <b> Post Summary: </b> 
    <% if @summary %>
    <%= link_to "Edit Summary", edit_topic_post_summary_path(@topic, @post, @summary), class: 'btn btn-success' %>
    <p><%= @post.summary.body %></p>
     <% else %>
    <%= link_to "Add Summary", new_topic_post_summary_path(@topic, @post, @summary), class: 'btn btn-success' %>
    <% end %>

    <p><%= @post.body %></p>
  </div>
  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>


